/* pages/query/query.wxss */
movable-view {
  align-items: center;
  justify-content: center;
  height: 900rpx;
  width: 600rpx;
}

movable-area {
  width: 750rpx;
  /* background-color: #ccc; */
  overflow: hidden;
  margin: auto;
}

.C {
  display: flex;
  flex-wrap: wrap;
}

.chairs {
  position: relative;
  height: 72rpx;
  width: 72rpx;
  border: 1rpx solid #f0f0f0;
  background-color: #fff;
  display: flex;
  flex-direction: column;

}

.chairs image {
  
  width: 40rpx;
  height: 40rpx;
  margin: auto;
}
.chairs .chairTag{
  color: #c0c0c0;
  font-size: 25rpx;

  position: absolute;
  bottom: -6rpx;
  right: 0;
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  line-height: 100%;
}

.block {
  border-radius: 30rpx;
  text-align: center;
  width: 300rpx;
  height: 150rpx;
  line-height: 150rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
}

.refresh{
  display: block;
  background-color: white;
  height: 120rpx;
  width: 75rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  border-top-left-radius: 20rpx;
  box-shadow: 6rpx 8rpx 18rpx black;
  font-size: 16rpx;
}
.refresh .rf{
  display: block;
  margin: auto;
  margin-top: 16rpx;
  margin-bottom: 12rpx;
  width: 40rpx;
  height: 40rpx;
}
.refresh .word{
  display: inline-block;
}
.refresh .icon{
  display: inline-block;
  margin-right: 5rpx;
  width: 16rpx;
  height: 16rpx;
  line-height: 16rpx;
}
.refresh .green,.refresh .red {
  text-align: center;
  margin-bottom: 10rpx;
  line-height: 16rpx;
}
.refresh .g{
  background-color: #3cb670;
}

.refresh .r{
  background-color: #fa5252;
}
