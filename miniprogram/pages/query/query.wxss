/* pages/query/query.wxss */
movable-view {
  align-items: center;
  justify-content: center;
  height: 900rpx;
  width: 600rpx;
}

movable-area {
  width: 750rpx;
  /* background-color: #ccc; */
  overflow: hidden;
  margin: auto;
}

.C {
  display: flex;
  flex-wrap: wrap;
}

.chairs {
  position: relative;
  height: 72rpx;
  width: 72rpx;
  border: 1rpx solid #f0f0f0;
  background-color: #fff;
  display: flex;
  flex-direction: column;

}

.chairs image {
  
  width: 40rpx;
  height: 40rpx;
  margin: auto;
}
.chairs .chairTag{
  color: #c0c0c0;
  font-size: 25rpx;

  position: absolute;
  bottom: -6rpx;
  right: 0;
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  line-height: 100%;
}

.block {
  border-radius: 30rpx;
  text-align: center;
  width: 300rpx;
  height: 150rpx;
  line-height: 150rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
}
